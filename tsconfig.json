{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "removeComments": true,
    "newLine": "LF",
    "declaration": true,
    "noImplicitAny": true,
    "noResolve": false,
    "noLib": false,
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules",
    "./demo",
    "./dist",
    "./docs"
  ]
}